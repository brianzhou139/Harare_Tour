<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_margin="15dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:elevation="@dimen/dp_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:padding="@dimen/dp_20"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tg_foto_id"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/five_dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tg_name_id"
                        android:layout_weight="4"
                        android:textStyle="bold"
                        android:padding="@dimen/dp_2"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/bg_black"
                        tools:text="tour guide name"
                        android:layout_width="@dimen/dp_0"
                        android:paddingRight="@dimen/dp_5"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/side_menu_id"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_side_menu"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tg_category_id"
                    android:padding="@dimen/dp_1"
                    android:textColor="@color/halaj"
                    android:textSize="@dimen/category_size"
                    tools:text="@string/category_g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_weight="5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tg_address_id"
                        android:layout_weight="4"
                        android:padding="2dp"
                        tools:text="@string/road_harare"
                        android:layout_width="@dimen/dp_0"
                        android:paddingRight="@dimen/dp_5"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/fav_menu_id"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_star"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>